{
  "compilerOptions": {
    "target": "esnext",
    "allowSyntheticDefaultImports": false,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "sourceMap": false,
    "alwaysStrict": true,
    "jsx": "react"
  },
  "include": [
    "typings",
    "styleguide/**/*",
    "node_modules/buildo-react-components/**/*",
    "node_modules/react-input-children/**/*",
    "node_modules/react-autosize-textarea/**/*",
    "node_modules/react-cookie-banner/**/*",
    "node_modules/react-flexview/**/*"
  ]
}
